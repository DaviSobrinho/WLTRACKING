<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ActivityVisualizaVeiculoTextInputLayout1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:text="Davi"
                android:id="@+id/ActivityVisualizaVeiculoTextInput1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Modelo:"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ActivityVisualizaVeiculoTextInputLayout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ActivityVisualizaVeiculoTextInput2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Placa:"
                android:digits="qwertyuiopasdfghjklçzxcvbnmQWERTYUIOPASDFGHJKLÇZXCVBNM1234567890-"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ActivityVisualizaVeiculoTextInputLayout3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ActivityVisualizaVeiculoTextInput3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Ano:"
                android:inputType="number"
                android:digits="1234567890/"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ActivityVisualizaVeiculoTextInputLayout4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ActivityVisualizaVeiculoTextInput4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Notas:"/>

        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/ActivityVisualizaVeiculoButtonConfirmar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:backgroundTint="#15CD00"
            android:textSize="20sp"
            android:text="CONFIRMAR">

        </Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>