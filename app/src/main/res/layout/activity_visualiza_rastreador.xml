<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:orientation="vertical"
            android:layout_weight="30">
            <ImageView
                android:id="@+id/ActivityVisualizaRastreadorImage"
                android:layout_marginTop="10dp"
                android:contentDescription="Cliente"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_action_rastreador"
                app:tint="@color/white"
                android:background="@color/purple_500"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/ActivityVisualizaRastreadorTextView"
                android:layout_height="40dp"
                android:layout_width="150dp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Rastreador"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_weight="30"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/ActivityVisualizaRastreadorSpinner1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
            </Spinner>
            <Spinner
                android:id="@+id/ActivityVisualizaRastreadorSpinner2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
            </Spinner>
            <Spinner
                android:id="@+id/ActivityVisualizaRastreadorSpinner3"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
            </Spinner>
        </LinearLayout>
    </LinearLayout>




    <ScrollView
        android:layout_marginTop="210dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ActivityVisualizaRastreadorRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/activity_visualiza_rastreador_recyclerviewcontent"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>