<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/ActivityAddChipButtonClientes"
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAlignment="center"
        android:text="Cliente"
        android:src="@drawable/ic_action_cliente"
        >
    </Button>
    <Button
        android:id="@+id/ActivityAddChipButtonVeiculos"
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="14dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAlignment="center"
        android:text="Veículo"
        android:src="@drawable/ic_action_cliente"
        >
    </Button>
    <Button
        android:id="@+id/ActivityAddChipButtonRastreadores"
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/ActivityAddChipButtonClientes"
        app:layout_constraintTop_toBottomOf="@id/ActivityAddChipButtonClientes"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAlignment="center"
        android:text="Rastreador"
        android:src="@drawable/ic_action_cliente"
        >
    </Button>
    <Button
        android:id="@+id/ActivityAddChipButtonChips"
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/ActivityAddChipButtonVeiculos"
        app:layout_constraintTop_toBottomOf="@id/ActivityAddChipButtonVeiculos"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAlignment="center"
        android:text="Chip"
        android:src="@drawable/ic_action_cliente"
        >
    </Button>
    <ScrollView
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ActivityAddChipTextInputLayout1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ActivityAddChipTextInput1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="IMEI:"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ActivityAddChipTextInputLayout2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ActivityAddChipTextInput2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Modelo:"
                    android:inputType="number"
                    android:digits="1234567890-. "/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ActivityAddChipTextInputLayout3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ActivityAddChipTextInput3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Telefone:"
                    android:inputType="number"
                    android:digits="1234567890-() "/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ActivityAddChipTextInputLayout4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ActivityAddChipTextInput4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/Hint4"
                    android:inputType="number"
                    android:digits="1234567890"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ActivityAddChipTextInputLayout5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ActivityAddChipTextInput5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/Hint5"
                    android:inputType="number"
                    android:digits="1234567890,.$"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:clickable="false"
                android:textSize="16sp"
                android:text="Estado de funcionamento:">

            </Button>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">
                <CheckBox
                    android:id="@+id/ActivityAddChipCheckBox1"
                    android:text="Ativado"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp">
                </CheckBox>
                <CheckBox
                    android:id="@+id/ActivityAddChipCheckBox2"
                    android:text="Desativado"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp">
                </CheckBox>
                <CheckBox
                    android:id="@+id/ActivityAddChipCheckBox3"
                    android:text="Em manutenção"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp">

                </CheckBox>
            </TableLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ActivityAddChipTextInputLayout7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ActivityAddChipTextInput6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/Hint7"/>

            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:clickable="false"
                android:backgroundTint="#15CD00"
                android:textSize="20sp"
                android:text="CONFIRMAR">

            </Button>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>